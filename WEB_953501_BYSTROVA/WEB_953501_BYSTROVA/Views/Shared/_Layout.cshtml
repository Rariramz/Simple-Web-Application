<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEB_953501_BYSTROVA</title>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body style="height: 100%; width: 100%; margin: 0; padding:0">
    <header style="top: 0; position:relative; width: 100%; height:70px;">
        <nav class="navbar navbar-expand-md navbar-dark bg-primary pl-5 pr-5">
            <a class="navbar-brand ml-10" asp-controller="Home" asp-action="Index">95350022</a>
            <div class="navbar-nav">
                @await Component.InvokeAsync("Menu", Model)
            </div>

            <partial name="_UserPartial"/>
        </nav>
    </header>

    <main class="container mt-4 mb-4" style="min-height: 75vh; width: 100%; align-items: center; align-content: center">
        @RenderBody()
    </main>

    <footer style="flex: 0 0 auto">
        <div class="navbar navbar-expand-md navbar-dark bg-primary pl-5 pr-5">
            <div class="navbar-nav ml-auto">
                <a class="nav-item nav-link mr-3" href="http://www.facebook.com">
                    <i class="fab fa-facebook-f fa-2x"></i>
                </a>

                <a class="nav-item nav-link mr-3" href="http://www.vk.com">
                    <i class="fab fa-vk fa-2x"></i>
                </a>
                <a class="nav-item nav-link mr-3" href="http://www.twitter.com">
                    <i class="fab fa-twitter fa-2x"></i>
                </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
