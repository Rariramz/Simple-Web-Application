@using WEB_953501_BYSTROVA.Models

@model RegisterResult

<div class="mt-3 mb-3" style="display: flex; flex-direction: row; align-items: space-between; align-content: center">
    <div style="display: flex; flex-direction: column; align-items: space-between; width: 50%">
        <img img-controller="Account" img-action="GetAvatar" class="img-thumbnail" style="width: 100%; height: 100%"/>
        <form class="mt-3" style="width: 100%" method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Index">
            <h5>Загрузить новый аватар</h5>
            <div class="mt-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="Avatar" name="Avatar">
                    <label class="custom-file-label" for="Avatar">Аватар</label>
                </div>
            </div>
            <div class="mt-3 mb-2">
                <button type="submit" class="btn btn-primary" style="width: 170px">Сохранить</button>
            </div>
        </form>
    </div>
    <div class="ml-4" style="width: 40%">
        <div>
            <h2 class="display-4">@Model.FirstName @Model.LastName</h2>
            <h2 class="mb-5">@Model.Email</h2>
            <form method="post" asp-controller="Account" asp-action="ChangePassword">
                <h5 class="mt-2">Задать новый пароль</h5>
                <div class="mt-3">
                    <label class="form-label" for="OldPassword">Старый пароль</label>
                    <input class="form-control col @(Model.OldPasswordError != "" ? "is-invalid" : "")" name="OldPassword" id="OldPassword" type="password" placeholder="Старый пароль" />
                    <div class="invalid-feedback">
                        @Model.OldPasswordError
                    </div>
                </div>
                <div class="mt-2">
                    <label class="form-label" for="Password">Пароль</label>
                    <input class="form-control col @(Model.PasswordError != "" ? "is-invalid" : "")" name="Password" id="Password" type="password" placeholder="Пароль" />
                    <div class="invalid-feedback">
                        @Model.PasswordError
                    </div>
                </div>
                <div class="mt-2">
                    <label class="form-label" for="PasswordConfirm">Подтвердите пароль</label>
                    <input class="form-control col @(Model.PasswordError != "" ? "is-invalid" : "")" name="PasswordConfirm" id="PasswordConfirm" type="password" placeholder="Подтверждение" />
                    <div class="invalid-feedback">
                        @Model.PasswordError
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary" style="width: 170px">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>
